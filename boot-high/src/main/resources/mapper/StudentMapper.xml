<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lixy.dao.IStudentDao">

	<resultMap id="studentResultMap" type="com.lixy.boothigh.bean.Student">
		<result column="id" property="id" />
		<result column="name" property="name" />
		<result column="sex" property="sex" />
		<result column="address" property="address" />
		<result column="cDate" property="cDate" />
	</resultMap>

    <insert id="addStudent" parameterType="com.lixy.boothigh.bean.Student">
    	insert into student (
    	<trim suffixOverrides=",">
			<if test="name != null and name != ''">
		      name,
		    </if>
			<if test="sex != null">
		      sex,
		    </if>
		    <if test="address != null and address != ''">
		      address,
		    </if>
			<if test="cDate != null">
		      cDate,
		    </if>
		</trim>   
		)VALUES(
		<trim suffixOverrides=",">
			<if test="name != null and name != ''">
		  		#{name},
			</if>
			<if test="sex != null">
		  		#{sex},
			</if>
			<if test="address != null and address != ''">
		  		#{address},
			</if>
			<if test="cDate != null">
		  		#{cDate},
			</if>
		</trim>
		)
    </insert>
    
    <select id="findStudents" parameterType="java.util.Map" resultMap="studentResultMap">
    	select * from student  
    	<where>
    		<if test="name != null and name != ''">
		  		#{name},
			</if>
			<if test="sex != null">
		  		#{sex},
			</if>
			<if test="address != null and address != ''">
		  		#{address},
			</if>
			<if test="cDate != null">
		  		#{cDate},
			</if>
    	</where>
    </select>
</mapper>